@model Đồ_án_web_quản_lí_phòng_trọ.Models.KhachHang

@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Profile</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <!-- Display the customer's MaKhachHang, but it will be submitted in the form -->
    @Html.HiddenFor(model => model.MaKhachHang)

    <!-- Other input fields for editing profile information -->
